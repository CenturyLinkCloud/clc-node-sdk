{
  "name": "clc-node-sdk",
  "version": "0.0.1",
  "description": "CenturyLink Cloud SDK for Node.js",
  "author": "Ilya Drabenia <ilya.drabenia@altoros.com>",
  "scripts": {
    "tests": "./node_modules/mocha/bin/mocha --recursive test/*/*.js test/*/*/*.js --fgrep [UNIT]",
    "tests-watch": "./node_modules/mocha/bin/mocha --recursive test/*/*.js test/*/*/*.js --fgrep [UNIT] -w",
    "integration-tests": "./node_modules/mocha/bin/mocha --recursive test/*/*.js test/*/*/*.js --fgrep [INTEGRATION]",
    "long-running-tests": "./node_modules/mocha/bin/mocha --recursive test/*/*.js test/*/*/*.js --fgrep [INTEGRATION, LONG_RUNNING]",
    "jshint": "./node_modules/.bin/jshint --verbose ./lib ./test",
    "jshint-watch": "./node_modules/.bin/watch \"npm run jshint\" lib test",
    "watch-all": "npm run tests-watch & npm run jshint-watch"
  },
  "dependencies": {
    "bluebird": "^2.9.26",
    "restling": "^0.9.1",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "jshint": "^2.8.0",
    "mocha": "^2.2.5",
    "watch": "^0.16.0"
  }
}
